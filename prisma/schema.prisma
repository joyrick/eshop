generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
}

enum DeliveryMethod {
  PACKETA
  COURIER
  PICKUP
}

model Order {
  id          String      @id
  status      OrderStatus @default(PENDING)
  currency    String
  amountTotal Int?
  customerEmail String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  stripeSessionId String?  @unique

  // Delivery selection (saved after payment verification)
  deliveryMethod DeliveryMethod?
  deliveryPrice  Int? // cents
}

model StripeEvent {
  id        String   @id
  type      String
  createdAt DateTime @default(now())
}
